<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:background="@color/white"
        style="@style/top_relativelayout" >

        <Button
            android:id="@+id/btn_back"
            style="@style/back_home_button"
            android:background="@drawable/selector_shape_bg"
            android:text="取消"/>
        
        <TextView
            android:id="@+id/text"
            style="@style/top_layout_text"
            android:layout_width="180dp"
            android:text="关于"
            android:textColor="@color/text_color_gray" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textColor="@color/dark_black"
        android:text="美图Show"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/dark_black"
        android:autoLink="all"
        android:text="我的贴吧："/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/dark_black"
        android:autoLink="all"
        android:textSize="11sp"
        android:text="http://tieba.baidu.com/f?kw=%CE%E2%BA%E8%E7%F9&amp;fr=index"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/dark_black"
        android:text="版本号：v3.0"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/dark_black"
        android:textSize="18sp"
        android:text="本次更新内容："/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_gray"
        android:text="1.主界面改版"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_gray"
        android:text="2.添加闪屏页面"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_gray"
        android:text="3.增加分类查看"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_gray"
        android:text="4.图册里的文字可以复制到剪贴板"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_gray"
        android:text="5.增加网络缓存，浏览过的图片文字下次加载无需消耗流量！"/>

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="@color/dark_black"
        android:text="2014-10-16"/>
    
    <TextView 
        android:id="@+id/tv_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_color_gray"
        android:text=""/>
    
</LinearLayout>