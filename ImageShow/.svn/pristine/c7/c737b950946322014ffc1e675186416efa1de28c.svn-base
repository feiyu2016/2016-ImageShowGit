<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutHeader"
        style="@style/top_relativelayout" >

        <Button
            android:id="@+id/btn_back"
            style="@style/back_home_button"
            android:background="@drawable/selector_shape_bg"
            android:text="取消" />

        <TextView
            android:id="@+id/text"
            style="@style/top_layout_text"
            android:layout_width="180dp"
            android:text="个人主页"
            android:textColor="@color/text_color_gray" />

        <Button
            android:id="@+id/btn_logout"
            style="@style/top_right_button"
            android:background="@drawable/selector_shape_bg"
            android:text="注销" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.suo.image.view.RoundImageView
                android:id="@+id/iv_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_headphoto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="布鲁克林乔"
                android:textColor="@color/text_color_gray"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_uploads"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我上传的"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我收藏的"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />
        
        <ImageView
        	android:id="@+id/cursor"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:scaleType="matrix"
        	android:background="@drawable/my_home_line" />
        
        <android.support.v4.view.ViewPager
        	android:id="@+id/vPager"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_gravity="center"
        	android:background="#ffffff"
        	android:flipInterval="30"
        	android:persistentDrawingCache="animation" />
    </LinearLayout>

</LinearLayout>