<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutHeader"
        style="@style/top_relativelayout"
        android:background="@color/white" >

        <Button
            android:id="@+id/btn_back"
            style="@style/back_home_button"
            android:background="@drawable/selector_shape_bg"
            android:text="取消" />

        <TextView
            android:id="@+id/text"
            style="@style/top_layout_text"
            android:layout_width="180dp"
            android:text="反馈建议"
            android:textColor="@color/text_color_gray" />

        <Button
            android:id="@+id/btn_save"
            style="@style/top_right_button"
            android:background="@drawable/selector_shape_bg"
            android:text="提交" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请输入信息..."
                android:padding="15dp"
                android:textColor="@color/text_color_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="期待您的反馈和建议！"
                android:textColor="@color/text_color_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="如果有好的想法和创意尽管说出来吧，我一定会积极采纳！"
                android:textColor="@color/text_color_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="如果有做的不好的地方尽管告诉我把，我一定会及时改进！"
                android:textColor="@color/text_color_gray" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="或者直接联系小编的qq小号：3031545049"
                android:textColor="@color/orange" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>